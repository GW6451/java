					else
				}
				
			case 2: 
				break;
			case 3: 
				break;
			case 4: 
				break;
			case 5: 
				break;
			case 9: 
				break;
			default :
				System.out.println("메뉴에 없는 번호");
					
		}
	}////seperateMenu

}////class AcademyCollectionLogicProject
